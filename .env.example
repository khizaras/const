# Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=procore_user
MYSQL_PASSWORD=your-strong-password
MYSQL_DB=procore

# Application
NODE_ENV=development
PORT=5000
JWT_SECRET=replace-with-random-uuid

# Optional: enable one-click setup installer UI (disable after first run)
# ENABLE_SETUP_UI=false
# SETUP_TOKEN=generate-a-strong-random-token-min-16-chars

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=465
EMAIL_USER=your-user@example.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=notifications@example.com

# Frontend URL (for email links)
APP_URL=http://localhost:5173

# Inbound email webhook hardening
# INBOUND_EMAIL_TOKEN=replace-with-strong-shared-secret
# INBOUND_EMAIL_ALLOWLIST=127.0.0.1,192.168.1.10

# Optional: override API base URL used by the frontend build
# API_BASE_URL=/api

# Optional: sample test auth fixture (local only)
# test_auth=[{"organizationId":1,"email":"eng@example.com","password":"Passw0rd!"}]
